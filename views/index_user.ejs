<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Log In!</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
  <img class="bg-img" src="bg-img.jpg" alt="bg-image">

    <div class="container">
        <div class="main">
            <div class="left">
                <div class="intro text-white">
                    <h1 class="font-weight-bold">BooksForBooks</h1>
                    <p class="lead">Pour-over craft beer pug drinking vinegar live-edge gastropub, keytar neutra
                        sustainable fingerstache kickstarter.</p>
                </div>
                <div class="form-container">
                    <form>
                        <div class="mb-3">
                            <label for="inputUserID" class="form-label text-white">UserID</label>
                            <input type="text" class="form-control" id="inputUserID" placeholder="Enter Your UserID"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label text-white">Password</label>
                            <input type="password" class="form-control" id="inputPassword"
                                placeholder="Enter Your Password" required>
                        </div>
                        <button type="button" onclick="processInput(event)" class="btn btn-primary">Log In</button>
                    </form>
                    <p class="mb-0 text-white">Don't have an account yet? <a href="userform.html">Sign up</a></p>
                </div>
            </div>
            <div class="right text-white">
                <div class="up">
                    <div class="bordered-section">
                        <h2 class="font-weight-bold display-4" id="userCount">0</h2>
                        <p class="lead">Users</p>
                      </div>
                      <div class="bordered-section">
                        <h2 class="font-weight-bold display-4" id="bookCount">0</h2>
                        <p class="lead">Books</p>
                      </div>
                </div>
                <div class="down">
                    <div class="bordered-section">
                        <h2 class="font-weight-bold display-4" id="transactionCount">0</h2>
                        <p class="lead">Transactions</p>
                      </div>
                      <div class="bordered-section">
                        <h2 class="font-weight-bold display-4" id="postCount">0</h2>
                        <p class="lead">Posts</p>
                      </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <a href="#" class="text-white"><i class="fab fa-facebook-f fa-lg mr-3"></i></a>
            <a href="#" class="text-white"><i class="fab fa-instagram fa-lg mr-3"></i></a>
            <a href="#" class="text-white"><i class="fab fa-linkedin-in fa-lg mr-3"></i></a>
            <a href="#" class="text-white"><i class="fab fa-twitter fa-lg"></i></a>
            <p class="mb-0 text-white">&copy; 2023 BooksForBooks. All rights reserved.</p>
        </div>
    </div>


  <script>
    document.addEventListener("DOMContentLoaded", function () {
        let valueDisplays = document.getElementById('bookCount');
        let interval = 4000;

        let start = 0;
        const end = <%= bookCount %>;
        let duration = Math.floor(interval/end);
        let counter = setInterval(function(){
            start +=1;
            valueDisplays.textContent = start;
            if(start == end){
                clearInterval(counter);
            }
        },duration);
    });
</script>
