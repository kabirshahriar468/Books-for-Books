<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="css/explore.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Explore</title>
</head>

<body>
    <div class="container">
        <!-- start of aside -->
        <aside>
            <div class="top">
                <div class="logo">
                    <h2>BooksForBooks</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </div>
            </div>

            <div class="sidebar" id="dashboard">
                <a href="/userdashboard">
                    <span class="material-symbols-outlined">
                        dashboard
                    </span>
                    <h3>Dashboard</h3>
                </a>
                <a href="#">
                    <span class="material-symbols-outlined">
                        book
                    </span>
                    <h3>My Books</h3>
                </a>
                <a href="/useraddbook">
                    <span class="material-symbols-outlined">
                        add_box
                    </span>
                    <h3>Add a Book</h3>
                </a>
                <a href="/userexplore" >
                    <span class="material-symbols-outlined">
                        globe
                    </span>
                    <h3>Explore</h3>
                </a>
                <a href="/notifications" class="active">
                    <span class="material-symbols-outlined">
                        notifications_active
                    </span>
                    <h3>Notifications</h3>
                    <span class="notification-count"><%=notificationCnt%></span>
                </a>
                <a href="#">
                    <span class="material-symbols-outlined">
                        search
                    </span>
                    <h3>Search</h3>
                </a>
                <a href="/logout">
                    <span class="material-symbols-outlined">
                        logout
                    </span>
                    <h3>Log Out</h3>
                </a>
            </div>
        </aside>
        <!-- End of the aside -->

        <!-- Start of main -->

        <main>
            <div class="top">
                <div class="left">
                    <h1>Explore</h1>
                </div>
                <div class="right">
                    <button id="menu-btn">
                        <span class="material-symbols-outlined">
                            menu
                        </span>
                    </button>
                    <div class="theme-toggler">
                        <span class="material-symbols-outlined active">
                            light_mode
                        </span>
                        <span class="material-symbols-outlined">
                            dark_mode
                        </span>
                    </div>
                    <div class="profile-photo">
                        <img src="<%= dp %>" alt="User Image">
                    </div>
                </div>
            </div>

            <div class="bottom">
                <!-- <div class="book-card">
                    <div class="book">
                        <div class="book-img">
                            <img src="https://cdn.britannica.com/21/182021-050-666DB6B1/book-cover-To-Kill-a-Mockingbird-many-1961.jpg"
                                alt="book-img">
                        </div>
                        <div class="detail">

                            <h2>To kill a mockingbird</h2>
                            <h3>Author: Harper Lee</h3>
                            <h3>Publisher: Hatem Tai publishers</h3>
                            <h3>Owner: Shahad Shahriar</h3>
                            <h1>$25</h1>
                        </div>
                    </div>
                    <div class="buttons">
                        <button type="button" class="btn btn-outline-primary">Buy</button>
                        <button type="button" class="btn btn-outline-primary">Exchange</button>
                    </div>
                </div> -->
                <!-- <h3>BUY REQUESTS-></h3> -->
                <% for (let i = 0; i < sellBooks.length; i++) { %>
                    <div class="book-card">
                        <div class="book">
                            <div class="book-img">
                                <img src="<%= sellBooks[i][0] %>" alt="book-img">
                            </div>
                            <div class="detail">
    
                                <h2>Book Title:<%= sellBooks[i][3] %></h2>
                                
                                <h3>Buyer Name: <%= sellBooks[i][1] %></h3>
                                <h1>$<%= sellBooks[i][2] %></h1>
                            </div>
                        </div>
                        <div class="buttons">
                            <button type="button" onclick="sell(<%= JSON.stringify({sellisbn:sellBooks[i][5],seller:sellerId,buyer:sellBooks[i][4]})%>)" class="btn btn-outline-primary">Sell</button>
                        </div>
                    </div>
                <% } %>

                <!-- <h3>EXCHANGE REQUESTS</h3> -->

                <% for (let i = 0; i < exchangeBooks.length; i++) { %>
                    <div class="book-card">
                        <div class="book">
                            <div class="book-img">
                                <img src="<%= exchangeBooks[i][0] %>" alt="book-img">
                            </div>
                            <div class="detail">
    
                                <h2><b>Give Book:</b><%= exchangeBooks[i][2] %></h2>
                                
                                <!-- <h3><b>Buyer Name:</b>  <%= exchangeBooks[i][1] %></h3> -->
                                <!-- <h1>$<%= exchangeBooks[i][2] %></h1> -->
                            </div>
                        </div>
                        <div class="book">
                            <div class="book-img">
                                <img src="<%= exchangeBooks[i][3] %>" alt="book-img">
                            </div>
                            <div class="detail">
    
                                <h2><b>Take Book:</b><%= exchangeBooks[i][4] %></h2>
                                
                                <h3><b>Buyer Name:</b>  <%= exchangeBooks[i][1] %></h3>
                                <!-- <h1>$<%= exchangeBooks[i][2] %></h1> -->
                            </div>
                        </div>
                        <div class="buttons">
                            <button type="button" onclick="exchange(<%= JSON.stringify({giveisbn:exchangeBooks[i][6],takeisbn:exchangeBooks[i][7],seller:sellerId,buyer:exchangeBooks[i][5]})%>)" class="btn btn-outline-primary">Exchange</button>
                        </div>
                    </div>
                <% } %>

